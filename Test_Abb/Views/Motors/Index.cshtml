@model IEnumerable<Test_Abb.Models.ElectricMotor>
@using Test_Abb.Models;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MotorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MotorType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxPower)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MotorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MotorType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxPower)
        </td>
        <td>
            @Html.DisplayFor(modelItem => ((ElectricMotor)item).ElectricMeasures.Count)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MotorId }) |
            @Html.ActionLink("Details", "Details", new { id = item.MotorId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MotorId })
        </td>
    </tr>
    }

</table>
