@model IEnumerable<Test_Abb.Models.Measure>
@using Test_Abb.Models;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MotorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => ((ElectricMotor)model).MotorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => ((ElectricMotor)model.Motor).MotorType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MotorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ((ElectricMotor)item.Motor).MotorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ((ElectricMotor)item.Motor).MotorType)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => ((ElectricMotor)item.Motor).CurrentA)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MotorId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MotorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MotorId })
            </td>
        </tr>
    }

</table>
